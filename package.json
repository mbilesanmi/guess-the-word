{
	"name": "vision-craft",
	"version": "0.0.1",
	"description": "vision-craft initialised with create-express-typescript-application.",
	"main": "server/index.ts",
	"scripts": {
		"build": "tsc",
		"start": "node ./build/server/index.js",
		"dev": "ts-node ./server/index.ts",
		"dev:nodemon": "nodemon -w server -e ts,json -x ts-node ./server/index.ts",
		"test": "cross-env NODE_ENV=test jest --testTimeout=10000",
		"migrate:reset": "cross-env NODE_ENV=test npx sequelize-cli db:migrate:undo:all && cross-env NODE_ENV=test npx sequelize-cli db:migrate",
		"pretest": "npm run migrate:reset"
	},
	"keywords": [
		"express",
		"typescript"
	],
	"devDependencies": {
		"@types/cors": "^2.8.10",
		"@types/express": "^4.17.12",
		"@types/jest": "^26.0.23",
		"@types/morgan": "^1.9.2",
		"@types/node": "^14.17.1",
		"@typescript-eslint/eslint-plugin": "^4.25.0",
		"@typescript-eslint/parser": "^4.25.0",
		"cross-env": "^7.0.3",
		"eslint": "^7.27.0",
		"jest": "^27.0.1",
		"nodemon": "^2.0.7",
		"supertest": "^6.1.3",
		"ts-jest": "^27.0.1",
		"ts-node": "^9.1.1",
		"typescript": "^4.3.2"
	},
	"dependencies": {
		"cors": "^2.8.5",
		"dotenv": "^10.0.0",
		"env-cmd": "^10.1.0",
		"express": "^4.17.1",
		"fs": "0.0.1-security",
		"helmet": "^4.6.0",
		"morgan": "^1.10.0",
		"pg": "^8.6.0",
		"pg-hstore": "^2.3.3",
		"rword": "^3.2.0",
		"sequelize": "^6.6.2"
	},
	"jest": {
		"testEnvironment": "node",
		"preset": "ts-jest",
		"coveragePathIgnorePatterns": [
			"/node_modules/"
		]
	}
}
